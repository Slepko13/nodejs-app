# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root=true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=2

[{.babelrc,.stylelintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc,.eslintrc,.prettierrc}]
indent_size=2

[{*.applejs,*.js,*.jsx,*.ts,*.tsx}]
indent_size=2

[{*.hbs,*.handlebars,*.mustache,*.ejs}]
indent_size=2

[*.{css,less,sass,scss}]
indent_size=2

[{*.yaml,*.yml}]
indent_size=2

[{*.sh,*.bash}]
indent_size=2

[{*.md,*.markdown,*.mdx}]
indent_size=2

